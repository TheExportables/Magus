<Window x:Class="Magus.Controls.TextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File elnevezése" Height="200" Width="300"
        Icon="../Resources/Images/magus-icon.jpg"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False" ResizeMode="CanResizeWithGrip" ShowActivated="True">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="File megjelenítendő neve a listában:" Margin="20,20,20,0"/>
        <TextBox DockPanel.Dock="Top" x:Name="ResponseTextBox" Margin="20,00,20,20"/>
        <Button DockPanel.Dock="Left" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="OK" IsDefault="True" Click="OKButton_Click" Margin="20,20,20,20" Width="50"/>
        <Button DockPanel.Dock="Right" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Eredeti név" IsCancel="True" Click="KeepButton_Click" Margin="20,20,20,20" />
    </DockPanel>
</Window>
